<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".android.MainActivity"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvBagCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bag: 0"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvDrawnCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drawn: 0"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Circle with the chip value -->
    <FrameLayout
        android:id="@+id/viewChipCircle"
        android:layout_width="220dp"
        android:layout_height="220dp"
        app:layout_constraintTop_toBottomOf="@+id/tvBagCount"
        app:layout_constraintBottom_toTopOf="@+id/btnDraw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/tvChipValue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="-"
            android:textSize="56sp"
            android:gravity="center"
            android:textStyle="bold" />
    </FrameLayout>

    <Button
        android:id="@+id/btnDraw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Draw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnReturnLast" />

    <Button
        android:id="@+id/btnReturnLast"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Return last"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnReturnSelect"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnReturnSelect"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Return selected"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnAddChips"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnAddChips"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add (purchase) chips"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnNewRound"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnNewRound"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Start New Round"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>